{% extends 'page/page.html.twig' %}

{% block pageContent %}
    <div id="pinned-project">
        <h1>Projets</h1>
        <h2>Principaux projet</h2>
        {% for project in pinnedProjects %}
            <div class="project">
                <div class="tech-list">
                    {% for skill in project.skills %}
                        <p class="badge">{{ skill.name }}</p>
                    {% endfor %}
                </div>
                <p> {# TODO : add project date#} </p>
                <div class="title">
                    <h3>{{ project.name }}</h3>
                </div>
                <div class="description">
                    <p>{{ project.description }}</p>
                </div>
                <img src="#arrow-right" alt="view">
            </div>
        {% endfor %}
        <h2>Tous les projets</h2>
        <div id="project-filter-container">
            <div class="project-filter">
                <p class="project-filter-title">Technologie utilisé</p>
                <select name="project-filter-tech" id="project-filter-tech">
                    <option value="all">Tous</option>
                    <option value="techName">techName</option>
                </select>
            </div>
            <div class="project-filter">
                <p class="project-filter-title">Date</p>
                <select name="project-filter-tech" id="project-filter-tech">
                    <option value="all">Tous</option>
                    <option value="techName">techName</option>
                </select>
            </div>
            <div class="project-filter">
                <p class="project-filter-title">Type de projet</p>
                <select name="project-filter-tech" id="project-filter-tech">
                    <option value="all">Tous</option>
                    <option value="school">École</option>
                    <option value="personal">Personnel</option>
                    <option value="professional">Professionnel</option>
                </select>
            </div>
        </div>
        <div id="project-list">
            {% for project in projects %}
                <div class="project">
                    <div class="tech-list">
                        {% for skill in project.skills %}
                            <p class="badge">{{ skill.name }}</p>
                        {% endfor %}
                    </div>
                    <p> {# TODO : add project date#} </p>
                    <div class="title">
                        <h3>{{ project.name }}</h3>
                    </div>
                    <div class="description">
                        <p>{{ project.description }}</p>
                    </div>
                    <img src="#arrow-right" alt="view">
                </div>
            {% endfor %}
    </div>
{% endblock %}