{% extends 'page/page.html.twig' %}

{% block pageContent %}
    <div class="page-pannel">
        <div class="text-bubble">
            <div class="row">

            </div>
            <img src="character"  alt="perso"/>
        </div>
    </div>
    <div class="page-pannel">
        <h2> {{ "about.skill.title" | trans({}, 'about') }} </h2>
        {% for skillGroup in skillGroups %}
            {% if skillGroup.skills is not empty %}
                <div class="skills" >
                    <p> {{ skillGroup.customName }} </p>
                    {% for skill in skillGroup.skills %}
                        <img src="{{ skill.badge }}" alt="{{ skill.name }}"/>
                    {% endfor %}
                    <progress value="{{ skillGroup.aquiredPercentage }}" max="100"> {{ skillGroup.aquiredPercentage }}% </progress>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div>
        <h2> {{ "about.background.title"  | trans({}, 'about') }} </h2>
        <div class="background" >
            <h3> Background title placeholder </h3>
            <p> Background text placeholder </p>
            <img src="background" alt="background"/>
            {% for experience in experiences %}
                <div class="experience" >
                    <h3> {{ experience.companyName }} | {{ experience.postName }} </h3>
                    <p> description {# TODO : experience description #} </p>
                    <img src="{{ experience.compagnyLogo }}" alt="{{ experience.companyName }} logo"/>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="page-pannel">
        <h2> {{ "about.convinced" | trans({}, 'about') }} <br> {{ "about.meet" | trans({}, 'about') }} </h2>
        <a href="#" class="about-contact" >{{ "about.contactme" | trans({}, 'about') }}</a>
        <a href="#" class="about-contact" >{{ "about.cv" | trans({}, 'about') }}</a>
    </div>
{% endblock %}
