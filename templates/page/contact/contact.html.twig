{% extends 'page/page.html.twig' %}

{% block pageContent %}
    <div id="contact-headband"></div>
    <h1 style="visibility: hidden /* for seo */">Me contacter</h1>
    <div id="contact-form-wrapper">
        <div id="contact-form-left">
            <p id="contact-title">Me contacter</p>
            <p id="contact-subtitle">Besoin d’en savoir plus ? Envie d’avancer ensemble ? Vous pouvez me contacter, c’est juste en dessous !</p>
            <div id="contact-form">
                {{ form_start(contactForm) }}
                {{ form_widget(contactForm) }}
                <button type="submit" class="btn btn-primary">Envoyer</button>
                {{ form_end(contactForm) }}
            </div>
        </div>
        <div id="contact-form-right">
            <p class="contact-form-right-title">Coordonnées</p>
            <p class="contact-form-right-subtitle">Text</p>
        </div>
        <div id="contact-form-right">
            <p class="contact-form-right-title">Mentions légales</p>
            <p class="contact-form-right-subtitle">Text</p>
        </div>
        <div id="contact-form-right">
            <p class="contact-form-right-title">FAQ</p>
            <p class="contact-form-right-subtitle">Text</p>
        </div>
    </div>
{% endblock %}